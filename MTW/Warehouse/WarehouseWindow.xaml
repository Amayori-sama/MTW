<Window x:Class="MTW.Warehouse.WarehouseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MTW.Warehouse"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Склад товаров" Height="450" Width="1200" Background="Transparent">
    <Grid>
        <Grid MaxWidth="1280">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" MinWidth="160"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Height="419" VerticalAlignment="Bottom">
                <Button x:Name="BookButton" Content="Товары" 
                    Margin="10, 5, 10, 0" Click="BookButton_Click"/>
            </StackPanel>
            <Frame x:Name="Frame" Grid.Column="2" Grid.Row="0" NavigationUIVisibility="Hidden" />
        </Grid>
    </Grid>
</Window>